<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="Counter App" Height="450" Width="800">
    <Canvas Background="#FF21B4AE">
        <TextBox x:Name="txtNumber" TextWrapping="Wrap" Canvas.Left="324" Canvas.Top="86" Height="57" Width="155" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFF4F0F0" Text="{Binding Counter}"/>
        <Button x:Name="btnPlus" Content="+" Canvas.Left="271" Canvas.Top="217" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" Height="74" FontSize="24" Command="{Binding IncrementCommand}"/>
        <Button x:Name="btnMinus" Content="-" Canvas.Left="443" Canvas.Top="217" Width="94" Height="74" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Command="{Binding DecrementCommand}"/>

    </Canvas>
</Window>
